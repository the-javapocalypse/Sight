{
	"manifest_version": 2,
	"name": "Sight",
	"description": "Replace new tab page with a beautiful dashboard containing useful widgets and a new wallpaper, Ayah and Hadith each day.",
	"version": "1.3.1",
	"offline_enabled": true,
	"permissions": [
		"storage",
		"topSites",
		"geolocation"
	],
	"background": {
		"scripts": [ "background.js" ]
	},
	"icons": {
		"16": "img/sight_16.png",
		"32": "img/sight_32.png",
		"64": "img/sight_64.png",
		"128": "img/sight_128.png"
	},
	"browser_action": {
		"default_icon": "img/sight_64.png"
	},
	"chrome_url_overrides": {
		"newtab": "dashboard.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"web_accessible_resources": [
		"img/128.png"
	]
}